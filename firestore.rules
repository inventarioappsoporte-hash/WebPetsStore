rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de tiendas
    match /tiendas/{storeId} {
      
      // Usuarios: cada usuario solo puede leer/escribir su propio documento
      match /users/{userId} {
        // Permitir lectura solo si el usuario autenticado es el dueño del documento
        // O si es un admin (para el panel de administración)
        allow read: if request.auth != null && 
          (request.auth.uid == userId || 
           get(/databases/$(database)/documents/tiendas/$(storeId)/users/$(request.auth.uid)).data.role == 'admin');
        
        // Permitir crear su propio perfil
        allow create: if request.auth != null && 
          request.auth.uid == userId &&
          request.resource.data.role == 'user'; // Solo puede crear con rol 'user'
        
        // Permitir actualizar solo su propio documento
        // No puede cambiar el rol (solo admin puede hacerlo desde el panel)
        allow update: if request.auth != null && 
          request.auth.uid == userId &&
          request.resource.data.role == resource.data.role; // No puede cambiar su rol
        
        // Solo admin puede eliminar usuarios
        allow delete: if request.auth != null &&
          get(/databases/$(database)/documents/tiendas/$(storeId)/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      // Inventario: lectura pública, escritura solo admin
      match /inventory/{itemId} {
        allow read: if true; // Público para mostrar stock en la tienda
        allow write: if request.auth != null &&
          get(/databases/$(database)/documents/tiendas/$(storeId)/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      // Pedidos: usuarios pueden crear y leer sus propios pedidos
      match /orders/{orderId} {
        // Lectura: usuario puede ver sus pedidos, admin puede ver todos
        allow read: if request.auth != null &&
          (resource.data.userId == request.auth.uid ||
           get(/databases/$(database)/documents/tiendas/$(storeId)/users/$(request.auth.uid)).data.role == 'admin');
        
        // Crear: cualquier usuario autenticado puede crear pedidos
        allow create: if request.auth != null;
        
        // Actualizar/Eliminar: solo admin
        allow update, delete: if request.auth != null &&
          get(/databases/$(database)/documents/tiendas/$(storeId)/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      // Configuración de la tienda: solo lectura pública, escritura admin
      match /config/{configId} {
        allow read: if true;
        allow write: if request.auth != null &&
          get(/databases/$(database)/documents/tiendas/$(storeId)/users/$(request.auth.uid)).data.role == 'admin';
      }
    }
  }
}
